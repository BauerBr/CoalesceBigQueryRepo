{# == Node Type Name           : Work  == #}
{# == Node Type Description    : This node creates work table, view and also override create sql for view  == #}

{% if node.materializationType == 'table' %}

    {# CreateSQL for Table #}
	{{ stage('Create Work Table') }}

	CREATE OR REPLACE TABLE {{ ref_no_link(node.location.name, node.name) }}
	(
		{% for col in columns %}
			`{{ col.name }}` {{ col.dataType }}
            {%- if col.defaultValue | length > 0 %}
                DEFAULT {{ col.defaultValue }}
            {% endif %}
            {% if not col.nullable %}
                NOT NULL
            {% endif %}
			{%- if col.description | length > 0 %}
                OPTIONS(description = '{{ col.description | escape }}')
            {% endif %}
			{%- if not loop.last -%}, {% endif %}
		{% endfor %}
	)
	{%- if node.description | length > 0 %}
        OPTIONS(description = '{{ node.description | escape }}')
    {% endif %}

{% elif node.materializationType == 'view' %}

    {# Override CreateSQL for view #}
    {% if node.override.create.enabled %}

	    {{ node.override.create.script }}

    {% else %}

        {# CreateSQL for View #}
        {{ stage('Create Work View') }}

        CREATE OR REPLACE VIEW {{ ref_no_link(node.location.name, node.name) }}
        (
            {% for col in columns %}
                `{{ col.name }}`
                {%- if col.description | length > 0 %}
                    OPTIONS(description = '{{ col.description | escape }}')
                {% endif %}
                {%- if not loop.last -%}, {% endif %}
            {% endfor %}
        )
        {%- if node.description | length > 0 %}
            OPTIONS(description = '{{ node.description | escape }}')
        {% endif %}
        AS
        {% for source in sources %}
            SELECT
            {% if config.selectDistinct %}
            DISTINCT
            {% endif %}
            {% for col in source.columns %}
                {{ get_source_transform(col) }} AS `{{ col.name }}`
                {%- if not loop.last -%}, {% endif %}
            {% endfor %}

            {{ source.join }}

            {% if config.groupByAll %}
                Group By All
            {% endif %}

            {% if not loop.last %}
                {% if config.insertStrategy in ['UNION DISTINCT', 'UNION ALL'] %}
                    {{ config.insertStrategy }}
                {% else %}
                    UNION DISTINCT
                {% endif %}
            {% endif %}
        {% endfor %}
    {% endif %}
{% endif %}
